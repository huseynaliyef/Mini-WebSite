@using WebApplication1.Models;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if(ViewBag.Ad == "Admin")
{
    <a href="/AddUser" class="btn btn-danger"> Add User</a>
}
<a href="/Home/Logout" class="btn btn-light" style="float:right;"> Logout</a>
@{
    WebSiteContext w = new WebSiteContext();
    foreach (var item in w.Istifadecilers)
{
    <div id="fh5co-board" data-columns>
        <div class="item">
            <div class="animate-box">
                <a href="~/images/@item.Photo" class="image-popup fh5co-board-img" title="Səndə Bizim Saytda Qeydiyyatdan Keç və Məlumatlarını Doldur."><img src="~/images/@item.Photo" alt="Photo"></a>
                
            </div>
            <div class="fh5co-desc">@item.Name @item.Surname <a href="/Details?Id=@item.Id">more</a></div>
        </div>
    </div>
}
}
